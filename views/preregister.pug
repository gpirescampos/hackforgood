extends prelayout

block content
  if step==0
    include /partials/info
  else if step==1
    include /partials/iris
  else if step==2
    include /partials/finger
  else if step==3
    h1 Pre-registration
    p.lead Finished
    .panel.panel-default(style='border-radius:100px;')
      .panel-body
        .media
          .media-left
            img.media-object.img-circle(src=photo, style='width:50px;height:50px')
          .media-body
            h4.media-heading= name
            p= city + ' | ' + country
      
    .text-success(style='padding-left:4%')
      |  Account created
    .text-success(style='padding-left:4%')
      |  Token generated
    br
    form.form-horizontal(action='finishRegister/'+token, method='post')
      button.btn.btn-hack Finish