extends prelayout

block content
  if step==0
    include /partials/info
  else if step==1
    include /partials/iris
  else if step==2
    include /partials/finger
  else if step==3
    h1 Pre registration
    p.lead Finished
    hr
    .panel.panel-default
      .panel-body
        .media
          .media-left
            img.media-object.img-circle(src='/images/avatar.jpg', style='width:50px;height:50px')
          .media-body
            h4.media-heading= name
            p= city + ' | ' + country
      
    .text-success
      |  Account created
    .text-success
      |  Token generated
    br
    input.btn.btn-info(value='Finish')